!!!5
%html
  %head
    %title New Sound For Japan
    = csrf_meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:property => "og:url", :content => request.url }
    %meta{:property => "og:type", :content => "article" }
    %meta{:property => "og:title", :content => "New Sound For Japan" }
    %meta{:property => "og:description", :content => "Enjoy Japan. Enjoy the Sound. We're bringing back the good shit." }
    %meta{:property => "og:image", :content => asset_url('logo.png') }
  %body.application{:class => "#{params[:controller]} #{params[:action]}"}
    :coffee
      window.locale = #{I18n.locale.to_json}
    = yield :before_content if content_for? :before_content
    %header
      .container-fluid
        .user_area
          - if @current_user
            = image_tag @current_user.image.thumb('200x200').url, :class => 'profile_image'
            = link_to @current_user.name, @current_user
            = link_to "Log out", session_path, :method => :delete
          - else
            .signed_out
              = link_to "Log in", new_session_path, :class => 'email'
              = link_to '/auth/facebook', :class => 'facebook' do
                %i.fa.fa-facebook
                Log in
              = link_to new_user_path, :class => 'sign_up' do
                %i.fa.fa-envelope
                Sign up
        .language_select
          = link_to t('en'), '?locale=en', :class => ('active' if I18n.locale == :en)
          = link_to t('ja'), '?locale=ja', :class => ('active' if I18n.locale == :ja)
        .small_logo
          = link_to image_tag('newsoundforjapantext2.png'), root_url
          Alpha
    %nav
      %ul
        
        = link_to artists_path do
          %li.item{:class => "#{'on' if params[:controller] == 'artists'}"} 
            %i.fa.fa-user
            Artists
        = link_to venues_path do
          %li.item{:class => "#{'on' if params[:controller] == 'venues'}"} 
            %i.fa.fa-home
            Venues
        = link_to events_path do
          %li.item{:class => "#{'on' if params[:controller] == 'events'}"} 
            %i.fa.fa-heart
            Events
        - if @current_user && @current_user.user_relations.any?
        
          %li.title My Pages
          - @current_user.user_relations.each do |relation|
            = link_to relation.relative do
              %li.item
                = relation.relative.name
    %main
      .content
        = notice
        = yield
    %footer
      .container-fluid
        .row
          .col-xs-6
            %p New Sound For Japan is your personal agent.
            %p
              Copyright 2016
              = link_to "Stefan Corporation", 'http://stefan.co.jp'
          .col-xs-6
            %p
              Contact:
              %a(href="mailto:hello@newsoundforjapan.com") hello@newsoundforjapan.com
