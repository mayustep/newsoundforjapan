.nice_form
  = form_for(user) do |f|
    - if user.errors.any?
      #error_explanation
        %h2
          = pluralize(user.errors.count, "error")
          prohibited this user from being saved:
        %ul
          - user.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :email
      .inputs
        = f.text_field :email
    .field
      = f.label :password
      .inputs
        = f.password_field :password
    .actions
      = f.submit
    %hr  
    = link_to '/auth/facebook', :class => 'facebook' do
      %i.fa.fa-facebook
      Sign up with Facebook
