<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Booker</th>
      <th>Bookee</th>
      <th>Price</th>
      <th>Currency</th>
      <th>Bookee confirmed at</th>
      <th>Booker confirmed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.booker_id %></td>
        <td><%= booking.bookee_id %></td>
        <td><%= booking.price %></td>
        <td><%= booking.currency %></td>
        <td><%= booking.bookee_confirmed_at %></td>
        <td><%= booking.booker_confirmed_at %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

